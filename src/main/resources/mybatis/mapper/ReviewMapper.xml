<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bigdeal.incheonerang.review.dao.ReviewMapper">

    <select id="selectReviewList" resultType="ReviewDTO">
        SELECT *
        FROM REVIEW_TBL
    </select>

    <insert id="insertReview" parameterType="ReviewDTO">
        INSERT INTO REVIEW_TBL
        VALUES
            (
             SEQ_REVIEW.NEXTVAL,
             #{reviewTitle},
             #{reviewContent},
             #{reviewMemberId},
             SYSDATE
            )
    </insert>

    <update id="updateReview">
        UPDATE REVIEW_TBL
        SET REVIEW_TITLE = #{reviewTitle},
            REVIEW_CONTENT = #{reviewContent},
            REVIEW_DATE = SYSDATE
        WHERE REVIEW_CODE = #{reviewCode}
    </update>

    <delete id="deleteReview">
        DELETE FROM REVIEW_TBL
        WHERE REVIEW_CODE = #{reviewCode}
    </delete>

</mapper>